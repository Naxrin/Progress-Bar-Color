{
	"geode": "4.6.3",
	"gd":{
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074",
		"ios": "2.2074"
	},
	"version": "v3.6.0",
	"id": "naxrin.progress_bar_color",
	"name": "Progress Bar Color",
	"developer": "Naxrin",
	"description": "Our progress bar color modifier",
    "links": {
	    "source": "https://github.com/Naxrin/Progress-Bar-Color"
    },
	"resources": {
		"files": [
			"resources/*"
		]
	},
	"dependencies": {
		"geode.node-ids": {
			"version": "v1.20.1",
			"importance": "required"
		},
        "geode.custom-keybinds": {
			"version": "v1.1.1",
			"importance": "suggested"
        },
        "geode.devtools": {
			"version": "v1.10.1",
			"importance": "suggested"
        }
    },
	"settings":{
		"mod-menu": {
			"name": "Mod Options",
			"description": "Popup mod options.",
			"type":"custom:advanced-option"
		},
		"speed": {
			"name": "Speed",
			"description": "Commonly used speed.",
			"type":"float",
			"default": 0.5,
			"max": 5,
			"min": -5,
			"control": {
				"slider": true,
				"input": true
			}
		},
		"reload": {
			"name": "Force Reload",
			"description": "Reload custom shaders of advanced mode every time you enter the layer containing progress bars.\nUseful for debugging your shaders.",
			"type": "bool",
			"default": true
		}
	}
}
