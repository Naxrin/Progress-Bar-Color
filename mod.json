   {
	"geode": "5.0.0-beta.1",
	"gd":{
		"win": "2.2081",
		"android": "2.2081",
		"mac": "2.2081",
		"ios": "2.2081"
	},
	"version": "v4.7.1",
	"id": "naxrin.progress_bar_color",
	"name": "Progress Bar Color",
	"developer": "Naxrin",
	"description": "Our progress bar color modifier",
    "links": {
	    "source": "https://github.com/Naxrin/Progress-Bar-Color"
    },
	"resources": {
		"files": [
			"resources/*"
		]
	},
	"dependencies": {
		"geode.node-ids": {
			"version": "v1.22.0",
			"importance": "required"
		}
    },
	"settings":{
		"mod-menu": {
			"name": "Mod Options",
			"description": "Popup mod options.",
			"type":"custom:advanced-option"
		},
		"speed": {
			"name": "Speed",
			"description": "Commonly used speed.",
			"type":"float",
			"default": 0.5,
			"max": 5,
			"min": -5,
			"control": {
				"slider": true,
				"input": true
			}
		},
		"reload": {
			"name": "Force Reload",
			"description": "Reload custom shaders of advanced mode every time you enter the layer containing progress bars.\nUseful for debugging your shaders.",
			"type": "bool",
			"default": true
		},
		"drop-bar-fix": {
			"name": "No Platform Dropbar Progress",
			"description": "Hide the meaningless progress bar in retry level dropbar for platform levels.",
			"type": "bool",
			"default": true
		}
	}
}
